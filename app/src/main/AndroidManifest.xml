<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="felipersn.com.br.materialdesign">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeTranslicentFalse">
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.TransitionActivity" />
        <activity android:name=".Activity.TransitionSubActivity" />
        <activity android:name=".Activity.InstructiveActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>